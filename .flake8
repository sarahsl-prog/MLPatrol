[flake8]
max-line-length = 88
extend-ignore = E203,E501,W503,B008,D100,D102,D103,D104,D107,D205,D400,D401,F401,F541,F841,E402
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    mlvenv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .tox,
    logs
per-file-ignores =
    __init__.py:F401,D104
    tests/*:F401,F841,D100,D103
